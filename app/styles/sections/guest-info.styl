@import "../variables"

.guest-info
  .map-container
    position: relative

    iframe
      width: 100%
      height: 500px
      border: 1px solid white
      margin-bottom: 3em
      @extends $drop-shadow

    .overlay
      position: absolute
      cursor: pointer
      min-height: 500px
      width: 100%
      top: 0
      background: rgba(255, 255, 255, 0.8)

      @media $mqTablet
        display: none

      span
        padding: 5.5em 0 0
        letter-spacing: normal
        font-size: 3em
        display: inline-block

  .hotel-info
    letter-spacing: normal

    @media $mqLandscapePhone
      text-align: left
      padding: 0 0 0 4em

    p
      text-align: center
      @media $mqLandscapePhone
        text-align: left

    h3
      margin-bottom: 0

    ul
      font-size: 2.5em
      list-style: none
      margin: 1em 0 0
      padding: 0

    li
      margin: 0 0 0.2em
      padding: 0

      a
        text-decoration: none
        color: $colorDarkBlue
