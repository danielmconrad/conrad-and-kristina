@import "./variables"

*
  box-sizing: content-box

html
body
  height: 100%
  margin: 0
  padding: 0
  width: 100%

body
  @extends $fontBody
  color: $colorGreyDarkest
  background: $colorBackground
  font-size: 10px
  text-align: center

h1, h2, h3, h4, h5, h6
  font-weight: normal
  text-shadow: 1px 1px white
  letter-spacing: normal

a
  transition: color 0.4s ease, border-color 0.4s ease

p
  font-weight: lighter
  text-align: left
  font-size: 2.5em
  letter-spacing: normal

section
  padding: 12em 0

  &.alternate
    background: white

.constrainer
  max-width: 1200px
  margin: 0 auto
  padding: 0 2em

  @media $mqLandscapePhone
    padding: 0 3em

  @media $mqTablet
    padding: 0 4em

.text-center
.text-center p
  text-align: center

.text-left
  text-align: left

.image-container
  img
    width: 100%

  a
    display: inline-block
    border: 1px solid transparent

  a:hover
    border-color: darken($colorBackground, 10%)

.pure-g
.pure-g [class*=pure-u]
  @extends $fontBody
